# AI Platform – Environment Configuration
# Copy this file to .env and edit before starting the service.

# Application
APP_NAME="AI Platform"
APP_VERSION="1.0.0"
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Security – MUST change in production
SECRET_KEY=replace_this_with_a_long_random_secret_key_min_32_chars
VALID_API_KEYS=["prod-key-abc123","prod-key-xyz789"]

# Logging
LOG_LEVEL=INFO

# Database
# DB_PATH=/opt/ai_platform/platform.db

# Operation → Model folder mapping
# Each key must match a subfolder inside ./models/
# OPERATION_MODEL_MAP={"summarize":"qwen-summarize","translate":"qwen-translate","classify":"qwen-classify"}

# Daily limits (override defaults)
DEFAULT_DAILY_LIMIT=1000
